{
	"name": "jsmacros-intellisense",
	"displayName": "JsMacros Intellisense",
	"description": "Adds type hints to your scripts",
	"version": "1.0.1",
	"icon": "jsmacros.png",
	"publisher": "rollingcheesewheel",
	"repository": {
		"url": "https://github.com/rollingCheeseWheel/jsmacros-intellisense",
		"type": "git"
	},
	"type": "commonjs",
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"typescriptServerPlugins": [
			{
				"enableForWorkspaceTypeScriptVersions": true,
				"name": "ts-plugin"
			}
		],
		"commands": [
			{
				"command": "jsmacros-intellisense.fetchNewest",
				"title": "fetch newest declarations",
				"shortTitle": "fetch",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.fetchSpecific",
				"title": "fetch a specific declaration version",
				"shortTitle": "fetch specific",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.changeVersion",
				"title": "change the version for your current workspace",
				"shortTitle": "change version",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.removeLocal",
				"title": "remove local version",
				"shortTitle": "remove local",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.listGlobal",
				"title": "list all currently installed versions from global storage",
				"shortTitle": "list versions",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.removeGlobal",
				"title": "remove declarations for a specific version from global storage",
				"shortTitle": "remove global",
				"category": "JsMacros Intellisense"
			}
		],
		"configuration": {
			"title": "JsMacros Intellisense",
			"properties": {
				"jsmacros-intellisense.repoUrl": {
					"markdownDescription": "URL to the `JsMacros GitHub repo`, needed to fetch the TypeScript declarations",
					"type": "string",
					"default": "https://github.com/JsMacros/JsMacros",
					"pattern": "^https:\\/\\/github.com\\/[\\w.-]+\\/[\\w.-]+$"
				},
				"jsmacros-intellisense.assetRegExp": {
					"markdownDescription": "Regular Expression to filter the release for the asset containing the declarations",
					"type": "string",
					"default": "^typescript"
				},
				"jsmacros-intellisense.askWhenMultipleWorkspaces": {
					"markdownDescription": "When actions can only target one workspace ask which to use.",
					"type": "boolean",
					"default": true
				},
				"jsmacros-intellisense.experimentalHinting": {
					"markdownDescription": "Use a TypeScript server plugin for hinting instead of generating a `tsconfig.json` and copying the declarations into the macros folder",
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/unzipper": "^0.10.11",
		"@types/vscode": "^1.107.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.39.1",
		"typescript-eslint": "^8.48.1"
	},
	"dependencies": {
		"@octokit/rest": "^22.0.1",
		"jsonc-parser": "^3.3.1",
		"unzipper": "^0.12.3",
		"ts-plugin": "file:./ts-plugin"
	}
}
