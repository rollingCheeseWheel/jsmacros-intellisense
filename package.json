{
	"name": "jsmacros-intellisense",
	"displayName": "JsMacros Intellisense",
	"description": "Adds type hints to your scripts",
	"version": "0.0.1",
	"type": "commonjs",
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jsmacros-intellisense.fetchNewest",
				"title": "fetch newest declarations",
				"shortTitle": "fetch",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.fetchSpecific",
				"title": "fetch a specific declaration version",
				"shortTitle": "fetch specific",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.changeVersion",
				"title": "change the declaration version for your current workspace",
				"shortTitle": "change version",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.listVersions",
				"title": "list all currently installed versions",
				"shortTitle": "list versions",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.changeEnabled",
				"title": "enable or disable type hints",
				"shortTitle": "enable or disable",
				"category": "JsMacros Intellisense"
			},
			{
				"command": "jsmacros-intellisense.deleteVersion",
				"title": "remove declarations for a specific version",
				"shortTitle": "remove version",
				"category": "JsMacros Intellisense"
			}
		],
		"typescriptServerPlugins": [
			{
				"name": "tsplugin",
				"enableForWorkspaceTypeScriptVersions": true
			}
		],
		"configuration": {
			"title": "JsMacros Intellisense",
			"properties": {
				"jsmacros-intellisense.repoUrl": {
					"type": "string",
					"markdownDescription": "URL to the `JsMacros GitHub repo`, needed to fetch the TypeScript declarations",
					"default": "https://github.com/JsMacros/JsMacros",
					"pattern": "^https:\\/\\/github.com\\/[\\w.-]+\\/[\\w.-]+$"
				},
				"jsmacros-intellisense.assetRegExp": {
					"type": "string",
					"markdownDescription": "Regular Expression to filter the release for the asset containing the declarations",
					"default": "^typescript"
				},
				"jsmacros-intellisense.enabledByDefault": {
					"type": "boolean",
					"markdownDescription": "Whether or not hints should be loaded by default",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/unzipper": "^0.10.11",
		"@types/vscode": "^1.107.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.39.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1"
	},
	"dependencies": {
		"@octokit/rest": "^22.0.1",
		"tsplugin": "file:./tsplugin",
		"unzipper": "^0.12.3"
	}
}
